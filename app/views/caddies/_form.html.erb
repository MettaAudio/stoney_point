<%= simple_form_for(@caddie, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone, as: :string %>
    <%= f.input :school %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
