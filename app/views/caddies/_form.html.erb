<%= simple_form_for(@caddie, html: {class: 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone, as: :string, input_html: { value: phone_placeholder } %>
    <%= f.input :email %>
    <%= f.input :golf %>
    <hr>
    <%= f.input :course, :collection => courses_list %>
    <%= f.input :rules, :collection => rules_list %>
    <hr>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
