<h1>caddies</h1>
<hr>
<table class ='table table-striped'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>School</th>
      <% if current_user %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @caddies.each do |caddy| %>
      <tr>
        <td><%= link_to caddy.full_name, caddy %></td>
        <td><%= caddy.phone %></td>
        <td><%= caddy.school %></td>
        <% if current_user %>
          <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_caddy_path(caddy), :class => 'btn btn-small' %></td>
          <td><%= link_to '<i class="icon-trash"></i>'.html_safe, caddy, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Caddie', new_caddy_path if current_user %>
