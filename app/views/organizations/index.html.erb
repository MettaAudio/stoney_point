<h1>Organizations</h1>
<hr>
<table class ='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= link_to organization.name, organization %></td>
        <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_organization_path(organization), :class => 'btn btn-small' %></td>
        <td><%= link_to '<i class="icon-trash"></i>'.html_safe, organization, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization', new_organization_path %>
