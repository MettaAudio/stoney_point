<h1>work_days</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Time</th>
      <th></th>
      <% if current_user.try(:admin?) %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @work_days.each do |work_day| %>
      <tr>
        <td><%= work_day.time %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, work_day, :class => 'btn btn-small' %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_work_day_path(work_day), :class => 'btn btn-small' %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, work_day, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work day', new_work_day_path %>
