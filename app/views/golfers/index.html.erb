<h1>Golfers</h1>
<% if current_user %>
  <%= link_to 'New Golfer', new_golfer_path if current_user %> |
  <%= link_to 'New Caddie', new_caddie_path if current_user %>
<% end %>
<hr>
<table class ='table table-striped' id='data_table'>
  <thead>
    <tr>
      <th>Last</th>
      <th>First</th>
      <th>Host</th>
      <th>Preferences</th>
      <th>Caddie name</th>
      <th></th>
      <% if current_user %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @golfers.each do |golfer| %>
      <tr>
        <td><%= link_to golfer.last_name, golfer %></td>
        <td><%= link_to golfer.first_name, golfer %></td>
        <td><%= volunteer_housing_for(golfer) %></td>
        <td><%= golfer.caddie_preferences %></td>
        <td><%= caddies_for(golfer) %></td>
        <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, golfer, :class => 'btn btn-small' %></td>
        <% if current_user %>
          <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_golfer_path(golfer), :class => 'btn btn-small' %></td>
          <td><%= link_to '<i class="icon-trash"></i>'.html_safe, golfer, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render 'shared/datatable_js' %>