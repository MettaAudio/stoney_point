<h1>Listing volunteers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Zip</th>
      <th>Primary phone</th>
      <th>Secondary phone</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.first_name %></td>
        <td><%= volunteer.last_name %></td>
        <td><%= volunteer.street %></td>
        <td><%= volunteer.city %></td>
        <td><%= volunteer.state %></td>
        <td><%= volunteer.zip %></td>
        <td><%= volunteer.zip %></td>
        <td><%= volunteer.primary_phone %></td>
        <td><%= volunteer.secondary_phone %></td>
        <td><%= volunteer.email %></td>
        <td><%= link_to 'Show', volunteer %></td>
        <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

