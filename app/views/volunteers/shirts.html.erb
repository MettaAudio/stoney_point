<h1>Shirts</h1>
<hr>
<div class="row">
  <div class="span12 well">
    <table class='table'>
      <thead>
        <tr>
          <th>MS</th>
          <th>MM</th>
          <th>ML</th>
          <th>MXL</th>
          <th>MXXL</th>
          <th>WS</th>
          <th>WM</th>
          <th>WL</th>
          <th>WXL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= shirt_count_for('MS') %></td>
          <td><%= shirt_count_for('MM') %></td>
          <td><%= shirt_count_for('ML') %></td>
          <td><%= shirt_count_for('MXL') %></td>
          <td><%= shirt_count_for('MXXL') %></td>
          <td><%= shirt_count_for('WS') %></td>
          <td><%= shirt_count_for('WM') %></td>
          <td><%= shirt_count_for('WL') %></td>
          <td><%= shirt_count_for('WXL') %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<table id='shirts_table' class ='table table-striped'>
  <thead>
    <tr>
      <th>Last</th>
      <th>First</th>
      <th>Size</th>
      <th># Ordered</th>
      <th>Paid?</th>
      <th>Committee</th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= link_to(volunteer.last_name, volunteer) %></td>
        <td><%= link_to(volunteer.first_name, volunteer) %></td>
        <td><%= volunteer.shirt_size %></td>
        <td><%= volunteer.number_of_shirts %></td>
        <td><%= volunteer.paid ? "Yes" : "No" %></td>
        <td><%= committees_for(volunteer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function() {
    $('#shirts_table').dataTable({
      "iDisplayLength": 100
    });
  }
);
</script>