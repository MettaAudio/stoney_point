<h1>committees</h1>
<hr>
<table class ='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= link_to committee.name, committee %></td>
        <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_committee_path(committee), :class => 'btn btn-small' %></td>
        <td><%= link_to '<i class="icon-trash"></i>'.html_safe, committee, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

