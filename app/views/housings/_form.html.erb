<%= simple_form_for(@housing, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :volunteer %>
    <%= f.input :available %>
    <%= f.input :number_of_bedrooms %>
    <%= f.input :number_of_bathrooms %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
