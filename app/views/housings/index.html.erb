<h1>Housing <small><%= Housing.total_number_of_beds %> Beds Total</small></h1>
<hr>
<table class ='table table-striped' id='housing_table'>
  <thead>
    <tr>
      <th>Last</th>
      <th>First</th>
      <th>Available</th>
      <th>Beds</th>
      <th>Baths</th>
      <th>Smoking</th>
      <th>Pets</th>
      <th>Comments</th>
      <th>Golfers</th>
      <th></th>
      <% if current_user %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @housings.each do |housing| %>
      <tr>
        <td><%= link_to housing.volunteer.last_name, housing.volunteer %></td>
        <td><%= link_to housing.volunteer.first_name, housing.volunteer %></td>
        <td><%= housing.available.strftime('%A') %></td>
        <td><%= housing.number_of_bedrooms %></td>
        <td><%= housing.number_of_bathrooms %></td>
        <td><%= housing.smoking ? "Yes" : "No" %></td>
        <td><%= housing.pets ? "Yes" : "No" %></td>
        <td><%= housing.comments %></td>
        <td><%= housing.golfer.present? ? link_to(housing.golfer.full_name, housing.golfer): '--' %></td>
        <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, housing, :class => 'btn btn-small' %></td>
        <% if current_user %>
          <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_housing_path(housing), :class => 'btn btn-small' %></td>
          <td><%= link_to '<i class="icon-trash"></i>'.html_safe, housing, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function() {
    $('#housing_table').dataTable();
  }
);
</script>